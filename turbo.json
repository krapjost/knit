{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "lint": {},
    "test": {
      "outputs": ["coverage/**"]
    },
    "ui#dev": {
      "cache": false
    },
    "web#dev": {
      "cache": false,
      "dependsOn": ["ui#dev"]
    },
    "desktop#dev": {
      "cache": false,
      "dependsOn": ["web#dev"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "web#build": {
      "dependsOn": ["ui#build"],
      "outputs": ["dist/**"]
    },
    "desktop#build": {
      "dependsOn": ["web#build"],
      "outputs": ["dist/**"]
    }
  }
}
